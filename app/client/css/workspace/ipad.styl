.ipad {
    position: relative;
    background: #2c2c2c;
    border: 8px solid #fff;
    width: 55px;
    height: 80px;
    border-radius: 5px;

    &:before{
        position: absolute;
        bottom: -7px;
        left: 50%;
        content: '';
        width: 5px;
        height: 6px;
        border-radius: 50%;
        background-color: #2c2c2c; 
    }
}

